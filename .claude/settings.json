{
  "$schema": "https://docs.claude.com/schemas/settings.json",
  "tools": {
    "Bash": {
      "allow": [
        {
          "command": "gh issue *",
          "description": "GitHub issue operations (create, close, comment, view, etc)"
        },
        {
          "command": "npm *",
          "description": "Run npm commands (install, run, etc)"
        },
        {
          "command": "npx *",
          "description": "Run npx commands"
        },
        {
          "command": "wrangler *",
          "description": "Run wrangler CLI commands"
        },
        {
          "command": "curl *",
          "description": "Test API endpoints"
        },
        {
          "command": "mkdir *",
          "description": "Create directories"
        },
        {
          "command": "git *",
          "description": "Git operations (add, commit, push, status, etc)"
        },
        {
          "command": "python3 *",
          "description": "Run Python scripts (json formatting, analysis, etc)"
        },
        {
          "command": "node *",
          "description": "Run Node.js scripts (test scripts, data analysis, etc)"
        },
        {
          "command": "cat *",
          "description": "View file contents"
        }
      ]
    }
  }
}
